<h1>Add Planner</h1>

<form method="POST" action="/planner/create">
  <label>Video:</label>
  <select name="video_id" required>
    <% if (videos.length === 0) { %>
      <option disabled selected>No videos found</option>
    <% } else { %>
      <% videos.forEach(video => { %>
        <option value="<%= video.id %>">
          <%= video.viral_title %>
        </option>
      <% }) %>
    <% } %>
  </select>

  <label>Publish Date:</label>
  <input name="publish_date" type="date" required />

  <label>Status:</label>
  <select name="publish_status" required>
    <option value="Scheduled">Scheduled</option>
    <option value="Done">Done</option>
    <option value="Not Published">Not Published</option>
  </select>

  <label>YouTube Long EN:</label>
  <input name="youtube_long_en" />

  <label>YouTube Long FR:</label>
  <input name="youtube_long_fr" />

  <label>YouTube Long AR:</label>
  <input name="youtube_long_ar" />

  <label>YouTube Short EN:</label>
  <input name="youtube_short_en" />

  <label>YouTube Short FR:</label>
  <input name="youtube_short_fr" />

  <label>YouTube Short AR:</label>
  <input name="youtube_short_ar" />

  <label>Extra Note:</label>
  <textarea name="extra_note"></textarea>

  <button type="submit">Save</button>
</form>
