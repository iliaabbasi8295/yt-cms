<h1>Payments</h1>

<a
  href="/payments/create"
  style="
    display: inline-block;
    margin-bottom: 10px;
    background: #ff453a;
    color: #fff;
    padding: 8px 16px;
    border-radius: 6px;
    text-decoration: none;
  "
  >Add New Payment</a
>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount ($)</th>
      <th>Note</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% payments.forEach(payment => { %>
    <tr>
      <td><%= payment.date %></td>
      <td>$<%= payment.amount.toFixed(2) %></td>
      <td><%= payment.note %></td>
      <td>
        <a href="/payments/edit/<%= payment.id %>">Edit</a> |
        <a href="#" class="delete-payment-link" data-id="<%= payment.id %>"
          >Delete</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
<script src="/js/videos.js"></script>
