<h1>Edit Payment</h1>

<form method="POST" action="/payments/edit/<%= payment.id %>">
  <label>Date:</label>
  <input name="date" type="date" value="<%= payment.date %>" required />

  <label>Amount:</label>
  <input
    name="amount"
    type="number"
    step="0.01"
    value="<%= payment.amount %>"
    required
  />

  <label>Note:</label>
  <textarea name="note" rows="3"><%= payment.note %></textarea>

  <button type="submit">Update Payment</button>
</form>
